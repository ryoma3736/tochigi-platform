{
  "project": {
    "name": "tochigi-platform",
    "version": "1.0.0",
    "description": "Tochigi Prefecture 300 Company Platform - Instagram Integration & Subscription System",
    "author": "ryoma3736",
    "created": "2025-11-22"
  },
  "settings": {
    "auto_backup": true,
    "backup_extensions": [".md", ".yaml", ".json", ".html", ".css", ".ts", ".tsx"],
    "log_level": "info",
    "security": {
      "block_dangerous_commands": true,
      "dangerous_patterns": ["rm -rf", "sudo", "dd if=", "> /dev/"]
    }
  },
  "tools": {
    "github": {
      "enabled": true,
      "repository": "ryoma3736/tochigi-platform"
    }
  },
  "hooks": {
    "enabled": true,
    "session_start": true,
    "session_end": true,
    "pre_tool_use": true,
    "post_tool_use": true,
    "user_prompt_submit": true,
    "notification": true,
    "stop": true,
    "subagent_stop": true,
    "pre_compact": true,
    "before_edit": true,
    "after_write": true
  }
}
